<% include partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New campground</a>
                </p>
            </div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <div class="col-lg-12">
                <h3>Our Most Popular Campgrounds</h3>
            </div>

            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img src="<%= campground.image %>" class="card-img-top img-thumbnail">
                        <div class="card-block">
                            <h4 class="card-title"><%= campground.name %></h4>
                            <p class="card-text">Lorem Ipsum</p>
                        </div>
                    </div>
                </div> 

                <% }); %>
        </div>
    </div>
    <% include partials/footer %>